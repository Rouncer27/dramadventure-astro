---
import Hero from "../components/Hero/Hero.astro";
import HeroV2 from "../components/HeroV2/HeroV2.astro";
import HeroV3 from "../components/HeroV3/HeroV3.astro";
import ReviewSlider from "../components/ReviewSlider/ReviewSlider.jsx";
import ThreeBlocks from "../components/ThreeBlocks/ThreeBlocks.astro";
import LatestPosts from "../components/LatestPosts/LatestPosts.astro";
import DramQuote from "../components/DramQuote/DramQuote.astro";
import DramQuoteImages from "../components/DramQuoteImages/DramQuoteImages.astro";
import WysiwygContent from "../components/WysiwygContent/WysiwygContent.astro";
import WysiwygContentSideLogo from "../components/WysiwygContentSideLogo/WysiwygContentSideLogo.astro";
import ContentImageFullWidth from "../components/ContentImageFullWidth/ContentImageFullWidth.astro";
const { blocks, reviews } = Astro.props;
---

{
  blocks.map((block) => {
    switch (block.fieldGroupName) {
      case "Page_Pagecomponents_Components_Hero":
        return <Hero data={block} />;

      case "Page_Pagecomponents_Components_HeroV2":
        return <HeroV2 data={block} />;

      case "Page_Pagecomponents_Components_HeroV3":
        return <HeroV3 data={block} />;

      case "Page_Pagecomponents_Components_ReviewSlider":
        return <ReviewSlider client:load data={block} reviews={reviews} />;

      case "Page_Pagecomponents_Components_ThreeBlocks":
        return <ThreeBlocks data={block} />;

      case "Page_Pagecomponents_Components_DisplayLatestPosts":
        return <LatestPosts data={block} />;

      case "Page_Pagecomponents_Components_DramQuote":
        return <DramQuote data={block} />;

      case "Page_Pagecomponents_Components_DramQuoteImages":
        return <DramQuoteImages data={block} />;

      case "Page_Pagecomponents_Components_WysiwygContent":
        return <WysiwygContent data={block} />;

      case "Page_Pagecomponents_Components_WysiwygContentSideLogo":
        return <WysiwygContentSideLogo data={block} />;

      case "Page_Pagecomponents_Components_ContentImageFullWidth":
        return <ContentImageFullWidth data={block} />;

      default:
        return (
          <div>
            <p>Sorry cannot find this component -- {block.fieldGroupName}</p>
          </div>
        );
    }
  })
}
