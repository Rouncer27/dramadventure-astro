---
import { Image } from "astro:assets";
const { data } = Astro.props;
---

<div class="just-images">
  <div class="just-images-wrapper">
    <div class="just-images-one">
      <Image
        src={data.imageOne.sourceUrl}
        alt={data.imageOne.altText}
        width={1500}
        height={1500}
      />
    </div>
    <div class="just-images-two">
      <Image
        src={data.imageTwo.sourceUrl}
        alt={data.imageTwo.altText}
        width={1500}
        height={1500}
        format="avif"
        quality={"high"}
      />
    </div>
  </div>
</div>

<style lang="scss">
  @use "../../style/abstracts" as *;

  .just-images {
    width: 100%;
    padding: 10rem 0 2rem;
    background-color: $primaryColor;

    &-wrapper {
      display: flex;
      flex-wrap: wrap;
      justify-content: flex-start;
    }

    &-one {
      width: 44rem;
    }

    &-two {
      width: 73rem;
      margin-top: 5rem;
      margin-left: 5rem;
    }
  }
</style>
