---
import Layout from "../../layouts/Layout.astro";
import Hero from "../../components/SinglePosts/Hero/Hero.astro";
import Intro from "../../components/SinglePosts/Intro/Intro.astro";
import MainArticle from "../../components/SinglePosts/MainArticle/MainArticle.astro";
export async function getStaticPaths() {
  const response = await fetch(`${import.meta.env.WPGRAPHQL_URL}`, {
    method: "POST",
    headers: {
      "content-type": "application/json",
    },
    body: JSON.stringify({
      query: `
        query reviewsQuery {
            spritsReviews(first: 999999) {
                nodes {
                    slug
                    uri
                }
            }
        }
      `,
    }),
  });

  const { data } = await response.json();

  return data.spritsReviews.nodes.map((review) => {
    return {
      params: { slug: `${review.slug}` },
    };
  });
}

const response = await fetch(`${import.meta.env.WPGRAPHQL_URL}`, {
  method: "POST",
  headers: {
    "content-type": "application/json",
  },
  body: JSON.stringify({
    query: `
    query reviewsQuery($id: ID!) {
        spritReview(idType: SLUG, id: $id) {
                date
                title
                reviewsContent {
                    adventureWorthy
                    articleExcerpt
                    description
                    mainArticleReview
                    featuredImage {
                        sourceUrl
                        altText
                    }
                    reviewArticleImage {
                        sourceUrl
                        altText
                    }
                    reviewScore {
                        adventureWorthy
                        fieldGroupName
                        score
                    }
                    stats {
                        abv
                        naturalColour
                        fieldGroupName
                        nonChillFiltered
                    }
                }
                whiskyTypes {
                    nodes {
                        name
                    }   
                }

                whiskeyRegions {
                    nodes {
                        name
                    }
                }
            }

        acfOptionsSiteWideSettings {
                siteWideSettings {
                    reviewsArticlesInsideHeroImage {
                        sourceUrl
                    }
                }
            }
        }
    `,
    variables: {
      id: Astro.params["slug"],
    },
  }),
});

const {
  data: { spritReview, acfOptionsSiteWideSettings },
} = await response.json();
---

<Layout>
  <Hero
    data={acfOptionsSiteWideSettings.siteWideSettings
      .reviewsArticlesInsideHeroImage}
  />
  <Intro data={spritReview} />
  <MainArticle data={spritReview} />
</Layout>
