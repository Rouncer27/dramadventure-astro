---
import Layout from "../../layouts/Layout.astro";
import HeroWhiskies from "../../components/HeroWhiskies/HeroWhiskies.astro";

export async function getStaticPaths({ paginate }) {
  const response = await fetch(`${import.meta.env.WPGRAPHQL_URL}`, {
    method: "POST",
    headers: {
      "content-type": "application/json",
    },
    body: JSON.stringify({
      query: `
        query whiskiesQuery {
          whiskies(first: 999999) {
                nodes {
                    title
                    slug
                    uri
                }
            }
        }
      `,
    }),
  });

  const { data } = await response.json();
  const allWhiskies = data.whiskies.nodes;
  return paginate(allWhiskies, { pageSize: 3 });
}

const response = await fetch(`${import.meta.env.WPGRAPHQL_URL}`, {
  method: "POST",
  headers: {
    "content-type": "application/json",
  },
  body: JSON.stringify({
    query: `
      query whiskiesPageQuery {
        acfOptionsWhiskiesPage {
          whiskiesPage {
            heroTitleBottom
            heroTitleTop
            heroImage {
              altText
              sourceUrl
            }
          }
        }
      }
    `,
  }),
});
const {
  data: {
    acfOptionsWhiskiesPage: { whiskiesPage },
  },
} = await response.json();

const { page } = Astro.props;

console.log("whiskiesPage", whiskiesPage);
---

<Layout>
  <HeroWhiskies data={whiskiesPage} />
  <div>
    <div>
      <h1>Main Whiskey page</h1>
      {
        page.data.map((whisky) => (
          <p>
            <a href={`/whiskies/${whisky.slug}`}>{whisky.title}</a>
          </p>
        ))
      }
    </div>

    <nav aria-label="Whiskies">
      {page.url.prev && <a href={`${page.url.prev}`}>Prev</a>}
      {page.url.next && <a href={`${page.url.next}`}>Next</a>}
    </nav>
  </div>
</Layout>
