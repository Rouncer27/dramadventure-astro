---
import Layout from "../../layouts/Layout.astro";
import HeroWhiskies from "../../components/HeroWhiskies/HeroWhiskies.astro";
import WhiskyCard from "../../components/WhiskyCard/WhiskyCard.astro";
import Pagination from "../../components/Pagination/Pagination.astro";

export async function getStaticPaths({ paginate }) {
  const response = await fetch(`${import.meta.env.WPGRAPHQL_URL}`, {
    method: "POST",
    headers: {
      "content-type": "application/json",
    },
    body: JSON.stringify({
      query: `
        query whiskiesQuery {
          whiskies(first: 999999) {
                nodes {
                  title
                  slug
                  uri
                  whiskyContent {
                    featuredImage {
                      altText
                      sourceUrl
                    }
                  }
                  whiskeyOrigins {
                    nodes {
                      slug
                      name
                    }
                  }
                  whiskeyRegions {
                    nodes {
                      slug
                      name
                    }
                  }
                  whiskyTypes {
                    nodes {
                      slug
                      name
                    }
                  }
                }
            }
        }
      `,
    }),
  });

  const { data } = await response.json();
  const allWhiskies = data.whiskies.nodes;
  return paginate(allWhiskies, { pageSize: 8 });
}

const response = await fetch(`${import.meta.env.WPGRAPHQL_URL}`, {
  method: "POST",
  headers: {
    "content-type": "application/json",
  },
  body: JSON.stringify({
    query: `
      query whiskiesPageQuery {
        acfOptionsWhiskiesPage {
          whiskiesPage {
            heroTitleBottom
            heroTitleTop
            heroImage {
              altText
              sourceUrl
            }
          }
        }
      }
    `,
  }),
});
const {
  data: {
    acfOptionsWhiskiesPage: { whiskiesPage },
  },
} = await response.json();

const { page } = Astro.props;
---

<Layout>
  <HeroWhiskies data={whiskiesPage} />
  <WhiskyCard page={page} baseSlug="/whiskies" />
  <Pagination page={page} />
</Layout>
